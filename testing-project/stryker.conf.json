{
  "$schema": "../packages/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "reporters": [
    "html",
    "clear-text",
    "progress"
  ],
  "testRunner": "jest",
  "testRunnerNodeArgs": ["--experimental-vm-modules"],
  "plugins": [
    "../packages/jest-runner/dist/src/index.js"
  ],
  "jest": {
    "configFile": "jest.config.cjs"
  },
  "coverageAnalysis": "perTest",
  "mutationLevels": [
    { 
      "name": "default",
      "UpdateOperator": ["Pre--To++", "Pre++To--", "Post++To--", "Post--To++"]
    },
    {
      "name": "fancy",
      "BlockStatement": true,
      "MethodExpression": ["minToMax"]
    }
  ]
}
